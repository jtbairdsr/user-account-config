[credential]
	helper = osxkeychain

[push]
	default = simple

[alias]
	adds = !git add $@ && git status
	br = branch --list --color -vv
	hist = log --oneline
	ptg = push origin HEAD:ref/for/master\n
	cm = commit -m
	rim = rebase -i master

#------------------------------------P4MERGE-----------------------------------#
[diff]
	tool = p4mergetool

[difftool "p4mergetool"]
	cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge $LOCAL $REMOTE

[merge]
	summary = true
	tool = p4merge

[mergetool]
	keepBackup = false

[mergetool "p4merge"]
	cmd = $HOME/bin/p4merge "$PWD/$BASE" "$PWD/$LOCAL" "$PWD/$REMOTE" "$PWD/$MERGED"
	keepBackup = false
	trustExitCode = false
	prompt = false

[mergetool "p4merge"]
	trustExitCode = false

